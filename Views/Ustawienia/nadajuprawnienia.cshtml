                @Html.DisplayFor(modelItem => item.nazwisko)
            </div>
            <div class="tg-mow8 col-lg-3">
                @switch (item.RoleId)
                {
                    case "1":
                        <div><p>Admin</p></div>
                        break;
                    case "2":
