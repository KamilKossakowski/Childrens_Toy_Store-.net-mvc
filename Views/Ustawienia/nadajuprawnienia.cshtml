                        <div><p>Normal</p></div>
                        break;
                    case "4":
                        <div><p>Baned</p></div>
                        break;
                }


            </div>
            <div class="tg-mow8 row  col-lg-12">
                @switch (item.RoleId)
                {
                    case "1":

                        break;
                    case "2":

                        if (User.IsInRole("admin"))
                        {
                            @Html.ActionLink("Degradacja do norm", "ton", "Ustawienia", routeValues: new { UserId = item.Id_uzytkownik },htmlAttributes:new { @class="przyciskakcept"})
